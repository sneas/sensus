{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "emitBOM": true,
    "charset": "utf8"
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules"]
}
